---
import ResponsiveImage from "./ResponsiveImage.astro";
const { imgMobile, imgTablet, imgDesktop, alt, title, info, link, number } = Astro.props;
---
<a href={link} aria-label=`Go To ${alt}`>
    <div class="relative pt-[153px] md:pt-[137px] xl:pt-[457px] px-6 md:px-10 pb-[23px] md:pb-10 xl:max-h-[560px] hover:opacity-65 transition-opacity duration-500">
        <div class="w-full h-full absolute top-0 left-0 -z-20">
            <ResponsiveImage imgMobile={imgMobile} imgTablet={imgTablet} imgDesktop={imgDesktop} alt={alt}/>
        </div>

        <div class="absolute w-full h-full top-0 left-0 bg-card-gradient -z-10"></div>
        {
            number &&
            (
            <span class="hidden md:block absolute top-7 xl:top-[45px] right-4 xl:right-[-15px] z-10 text-white opacity-50 text-[15.625rem] font-bold leading-[12.5rem]">{number}</span>
            )
        }
        <div class="z-10">
            <h3 class="text-white text-[2rem] font-bold leading-10">{title}</h3>
            <p class="text-white text-opacity-75 text-[1.125rem] font-medium leading-6">{info}</p>
        </div>
    
    </div>
</a>